<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">	
	<RelativeLayout android:layout_width="match_parent"
	    android:layout_height="match_parent" >
	
	    <TextView
	        android:id="@+id/username"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:text="Username" />
	    
	    <RatingBar
	        android:id="@+id/userRating"
	        style="?android:attr/ratingBarStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/username"
	        android:layout_centerHorizontal="true" />
	
	    <LinearLayout
	        android:id="@+id/userGiftsGiven"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:orientation="vertical"
	        android:layout_below="@id/userRating" >
	
	        <TextView
	            android:id="@+id/userGifts"
	            style="@style/UserStatTitle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/label_user_gifts_given" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <ImageView
	                android:id="@+id/ImageView02"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/ic_event_type_default" />
	
	            <ProgressBar
	                android:id="@+id/progressBar1"
	                style="?android:attr/progressBarStyleHorizontal"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" />
	
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <ImageView
	                android:id="@+id/ImageView01"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/ic_event_type_default" />
	
	            <ProgressBar
	                android:id="@+id/ProgressBar01"
	                style="?android:attr/progressBarStyleHorizontal"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" />
	
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <ImageView
	                android:id="@+id/imageView1"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/ic_event_type_default" />
	
	            <ProgressBar
	                android:id="@+id/ProgressBar02"
	                style="?android:attr/progressBarStyleHorizontal"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" />
	
	        </LinearLayout>
	    </LinearLayout>
	
	    <LinearLayout
	        android:id="@+id/userGiftsRecv"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/userGiftsGiven"
	        android:layout_below="@+id/userGiftsGiven"
	        android:orientation="vertical" >
	
	        <TextView
	            android:id="@+id/TextView01"
	            style="@style/UserStatTitle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="@string/label_user_gifts_received" />
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <ImageView
	                android:id="@+id/ImageView05"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/ic_event_type_default" />
	
	            <ProgressBar
	                android:id="@+id/ProgressBar03"
	                style="?android:attr/progressBarStyleHorizontal"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" />
	
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <ImageView
	                android:id="@+id/ImageView04"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/ic_event_type_default" />
	
	            <ProgressBar
	                android:id="@+id/ProgressBar04"
	                style="?android:attr/progressBarStyleHorizontal"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" />
	
	        </LinearLayout>
	
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content" >
	
	            <ImageView
	                android:id="@+id/ImageView03"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/ic_event_type_default" />
	
	            <ProgressBar
	                android:id="@+id/ProgressBar05"
	                style="?android:attr/progressBarStyleHorizontal"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent" />
	
	        </LinearLayout>
	    </LinearLayout>
	
	</RelativeLayout>
</ScrollView>